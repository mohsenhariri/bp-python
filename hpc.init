#!/bin/bash

# SLRUM job script

echo "Job ID: $SLURM_JOB_ID"

module purge
module load Python/3.11.3-GCCcore-12.3.0
module load CUDA/12.0.0

DIRNAME="$(basename "$(pwd)")"

cp -pR $PWD $PFSDIR/
cd $PFSDIR/$DIRNAME

make switch-env hpc
make env-local
make test
make check
make pia

# Run Makefile targets
make run